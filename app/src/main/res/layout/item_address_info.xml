<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/x11"
    android:paddingRight="@dimen/x11"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y8"
        android:background="@color/tab_bg_fa"></LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y8">

        <TextView
            android:id="@+id/tv_name_pro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收  货  人:"
            android:textColor="@color/text_90"
            android:textSize="@dimen/x14" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_name_pro"
            android:layout_marginLeft="@dimen/x11"
            android:text="张楠"
            android:textColor="@color/text_64"
            android:textSize="@dimen/x14" />

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="15005811682"
            android:textColor="@color/text_64"
            android:textSize="@dimen/x14" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/y8">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收货地址:"
            android:textColor="@color/text_90"
            android:textSize="@dimen/x14" />
        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x11"
            android:text="杭州市滨江区明德路6号杭州中天模型有限公司"
            android:textColor="@color/text_64"
            android:textSize="@dimen/x14"
            android:lineSpacingMultiplier="1.5"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/part_divider_2"
        android:layout_marginTop="@dimen/y8"
        android:layout_marginBottom="@dimen/y8"></LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y8"
        android:paddingBottom="@dimen/y8">

        <LinearLayout
            android:id="@+id/ll_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/iv_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_defalutaddress"/>
            <TextView
                android:id="@+id/tv_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="设为默认"
                android:textColor="@color/text_64"
                android:textSize="@dimen/x14"
                android:layout_marginLeft="@dimen/x11"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:text="删除"
            android:textColor="@color/text_64"
            android:textSize="@dimen/x14"
            android:drawableLeft="@mipmap/icon_delete"
            android:drawablePadding="@dimen/x5"/>
        <TextView
            android:id="@+id/tv_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_toLeftOf="@id/tv_del"
            android:layout_marginRight="@dimen/x27"
            android:text="编辑"
            android:textColor="@color/text_64"
            android:textSize="@dimen/x14"
            android:drawableLeft="@mipmap/icon_edit"
            android:drawablePadding="@dimen/x5"/>
    </RelativeLayout>
</LinearLayout>