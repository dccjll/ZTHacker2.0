<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/head_top"/>
    <include layout="@layout/top_view"/>
    <EditText
        android:id="@+id/input_new_pass"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y28"
        android:layout_marginTop="@dimen/y23"
        android:layout_marginLeft="@dimen/x21"
        android:layout_marginRight="@dimen/x21"
        android:background="@drawable/register_edit_bg"
        android:hint="新密码"
        android:inputType="textPassword"
        android:maxLength="18"
        android:textSize="@dimen/x14"
        android:paddingLeft="@dimen/x13"
        android:paddingRight="@dimen/x13"
        android:textColorHint="@color/color_co_50"/>

    <EditText
        android:id="@+id/input_confirm_pass"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y28"
        android:layout_marginTop="@dimen/y15"
        android:layout_marginLeft="@dimen/x21"
        android:layout_marginRight="@dimen/x21"
        android:background="@drawable/register_edit_bg"
        android:hint="确认新密码"
        android:inputType="textPassword"
        android:maxLength="18"
        android:textSize="@dimen/x14"
        android:paddingLeft="@dimen/x13"
        android:paddingRight="@dimen/x13"
        android:textColorHint="@color/color_co_50"/>

    <TextView
        android:id="@+id/tv_next"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y28"
        android:layout_marginLeft="@dimen/x21"
        android:layout_marginRight="@dimen/x21"
        android:gravity="center"
        android:text="完成"
        android:textColor="@color/white"
        android:textSize="@dimen/x14"
        android:layout_marginTop="@dimen/y19"
        android:background="@drawable/confirm_gray_bg"/>
</LinearLayout>