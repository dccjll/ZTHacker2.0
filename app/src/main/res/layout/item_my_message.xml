<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y30"
        android:background="@color/white"
        android:paddingLeft="@dimen/x11"
        android:paddingRight="@dimen/x11"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/bottombar_icon_zan"/>
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_logo"
            android:layout_marginLeft="@dimen/x11"
            android:text="点赞"
            android:textSize="16sp"
            android:textColor="@color/black"/>

        <ImageView
            android:id="@+id/arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_back"
            android:layout_alignParentRight="true"/>
        <TextView
            android:id="@+id/tv_message_count"
            android:layout_width="@dimen/x18"
            android:layout_height="@dimen/x18"
            android:text="9+"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:layout_marginRight="@dimen/x11"
            android:layout_toLeftOf="@id/arrow"
            android:gravity="center"
            android:background="@drawable/arl_red_dot"/>
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/x43"
        android:background="@color/color_f0"/>
</LinearLayout>