<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/x36">

    <ImageView
        android:id="@+id/simpleDraweeView_head_icon"
        android:layout_width="@dimen/x36"
        android:layout_height="@dimen/x36"
        android:src="@mipmap/icon_userphote_hl"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_toRightOf="@id/simpleDraweeView_head_icon"
        android:layout_marginLeft="@dimen/x5"
        android:layout_weight="1"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/text_32"
        android:textSize="@dimen/x12"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_attention_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/text_64"
            android:textSize="@dimen/x11" />
        <TextView
            android:id="@+id/tv_is_attention"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/attention_bg"
            android:layout_marginLeft="@dimen/x11"
            android:paddingBottom="@dimen/y4"
            android:paddingLeft="@dimen/x21"
            android:paddingRight="@dimen/x21"
            android:paddingTop="@dimen/y4"
            android:text="+关注"
            android:textColor="@color/text_32"
            android:textSize="@dimen/x14" />
    </LinearLayout>
</RelativeLayout>
