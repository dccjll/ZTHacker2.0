<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tab_bg_fa">

    <include layout="@layout/head_top"/>
    <include layout="@layout/top_view"/>
    <RelativeLayout
        android:id="@+id/rl_photo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y28"
        android:layout_marginLeft="@dimen/x11"
        android:layout_marginRight="@dimen/x11">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="头    像"
            android:textColor="@color/text_64"
            android:textSize="@dimen/x14"
            android:layout_centerVertical="true"/>
        <ImageView
            android:id="@+id/iv_next1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_next"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
        <ImageView
            android:id="@+id/simpleDraweeView_head_icon"
            android:layout_width="@dimen/x27"
            android:layout_height="@dimen/x27"
            android:layout_marginRight="@dimen/x11"
            android:background="@mipmap/icon_userphote_hl"
            android:layout_toLeftOf="@id/iv_next1"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/part_divider_2"
        android:layout_marginLeft="@dimen/x11"></LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_user_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y28"
        android:layout_marginLeft="@dimen/x11"
        android:layout_marginRight="@dimen/x11">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户名"
            android:textColor="@color/text_64"
            android:textSize="@dimen/x14"
            android:layout_centerVertical="true"/>
        <ImageView
            android:id="@+id/iv_next2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_next"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/x14"
            android:textColor="@color/text_96"
            android:layout_toLeftOf="@id/iv_next2"
            android:layout_marginRight="@dimen/x11"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/part_divider_2"
        android:layout_marginLeft="@dimen/x11"></LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_phone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y28"
        android:layout_marginLeft="@dimen/x11"
        android:layout_marginRight="@dimen/x11">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号"
            android:textColor="@color/text_64"
            android:textSize="@dimen/x14"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/x14"
            android:textColor="@color/text_c0"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/part_divider_2"
        android:layout_marginLeft="@dimen/x11"></LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_sex"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y28"
        android:layout_marginLeft="@dimen/x11"
        android:layout_marginRight="@dimen/x11">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="性    别"
            android:textColor="@color/text_64"
            android:textSize="@dimen/x14"
            android:layout_centerVertical="true"/>
        <ImageView
            android:id="@+id/iv_next4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_next"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/tv_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="男"
            android:textSize="@dimen/x14"
            android:textColor="@color/text_96"
            android:layout_toLeftOf="@id/iv_next4"
            android:layout_marginRight="@dimen/x11"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/part_divider_2"
        android:layout_marginLeft="@dimen/x11"></LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_type"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y28"
        android:layout_marginLeft="@dimen/x11"
        android:layout_marginRight="@dimen/x11">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="身    份"
            android:textColor="@color/text_64"
            android:textSize="@dimen/x14"
            android:layout_centerVertical="true"/>
        <ImageView
            android:id="@+id/iv_next5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_next"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="老师"
            android:textSize="@dimen/x14"
            android:textColor="@color/text_96"
            android:layout_toLeftOf="@id/iv_next5"
            android:layout_marginRight="@dimen/x11"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/part_divider_2"
        android:layout_marginLeft="@dimen/x11"></LinearLayout>
</LinearLayout>