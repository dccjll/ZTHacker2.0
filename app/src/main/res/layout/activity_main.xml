<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.MainActivity"
    android:background="@color/white">

        <com.example.auser.zthacker.view.MyViewPager
            android:id="@+id/viewPager_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/y31"
            android:orientation="vertical"></com.example.auser.zthacker.view.MyViewPager>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y31"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/part_divider"></LinearLayout>
            <LinearLayout
                android:id="@+id/ll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@color/tab_bg_fa">

                <LinearLayout
                    android:id="@+id/ll_tab1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/image_tab1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_home_hl" />

                    <TextView
                        android:id="@+id/textView_tab1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/y3"
                        android:text="首页"
                        android:textColor="@color/text_64"
                        android:textSize="@dimen/x11" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_tab2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/image_tab2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_course" />

                    <TextView
                        android:id="@+id/textView_tab2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/y3"
                        android:text="课程"
                        android:textColor="@color/text_64"
                        android:textSize="@dimen/x11" />
                </LinearLayout>
                <!--<LinearLayout
                    android:id="@+id/ll_tab3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/image_tab3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_find" />

                    <TextView
                        android:id="@+id/textView_tab3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/y3"
                        android:text="发现"
                        android:textColor="@color/text_64"
                        android:textSize="@dimen/x11" />
                </LinearLayout>-->
                <LinearLayout
                    android:id="@+id/ll_tab4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/image_tab4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_mine" />

                    <TextView
                        android:id="@+id/textView_tab4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/y3"
                        android:text="我的"
                        android:textColor="@color/text_64"
                        android:textSize="@dimen/x11" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
