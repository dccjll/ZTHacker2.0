<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/x11"
        android:layout_marginLeft="@dimen/x41">

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingRight="@dimen/x11"
            android:text="1个小时前"
            android:textColor="@color/text_c0"
            android:textSize="@dimen/x11" />

        <TextView
            android:id="@+id/tv_reply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_time"
            android:background="@drawable/button_reply_bg"
            android:paddingBottom="@dimen/x2"
            android:paddingTop="@dimen/x2"
            android:paddingLeft="@dimen/x11"
            android:paddingRight="@dimen/x11"
            android:text="回复"
            android:textColor="@color/text_64"
            android:textSize="@dimen/x11" />
        <TextView
            android:id="@+id/tv_del_and_report"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="删除"
            android:textSize="@dimen/x11"
            android:textColor="@color/text_64"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
</LinearLayout>