<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/y28"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/x5"
            android:paddingLeft="@dimen/x11"
            android:paddingRight="@dimen/x11"
            android:paddingTop="@dimen/x5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/view_search_bg"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/x11"
                    android:src="@mipmap/searchbar_icon_search" />

                <EditText
                    android:id="@+id/et_input"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/x5"
                    android:background="@null"
                    android:hint="搜索关键字"
                    android:singleLine="true"
                    android:imeOptions="actionSearch"
                    android:textColorHint="@color/text_c0"
                    android:textSize="@dimen/x11" />

                <ImageView
                    android:id="@+id/iv_search_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/x11"
                    android:src="@mipmap/searchbar_icon_close"
                    android:visibility="invisible" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="@dimen/x50"
            android:layout_height="@dimen/y28"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/delete_bg"
            android:textSize="@dimen/y9" />
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/part_divider"/>
</LinearLayout>