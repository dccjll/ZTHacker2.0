<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/y75"
            app:cardCornerRadius="@dimen/x9"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_f0"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_picture"
                    android:layout_width="@dimen/y75"
                    android:layout_height="match_parent"
                    android:src="@mipmap/img_placeholder_210"
                    android:scaleType="fitCenter"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/x11"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/x14"
                        android:textColor="@color/text_32"
                        android:singleLine="true"
                        android:ellipsize="end"/>
                    <TextView
                        android:id="@+id/tv_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/x5"
                        android:textSize="@dimen/x12"
                        android:textColor="@color/text_64"
                        android:lines="3"
                        android:lineSpacingMultiplier="1.3"
                        android:ellipsize="end"/>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
</LinearLayout>