<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/part_divider_2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y31"
            android:background="@color/white"

            android:orientation="horizontal">

            <EditText
                android:id="@+id/input_comment"
                android:layout_width="0dp"
                android:layout_height="@dimen/y20"
                android:layout_weight="1"
                android:layout_marginBottom="@dimen/x8"
                android:layout_marginLeft="@dimen/x11"
                android:layout_marginTop="@dimen/x8"
                android:background="@drawable/comment_input_bg"
                android:focusable="false"
                android:gravity="center_vertical"
                android:hint="我来说两句~"
                android:paddingLeft="@dimen/x5"
                android:paddingRight="@dimen/x5"
                android:textColorHint="@color/text_c0"
                android:textSize="@dimen/x14" />

            <LinearLayout
                android:id="@+id/ll_zan"
                android:layout_width="@dimen/x44"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x11"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_zan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/bottombar_icon_zan" />

                <TextView
                    android:id="@+id/tv_zan_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x5"
                    android:text="点赞2.4k"
                    android:textSize="@dimen/x8" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_collection"
                android:layout_width="@dimen/x44"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_collection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/bottombar_icon_star" />

                <TextView
                    android:id="@+id/tv_collection_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x5"
                    android:text="收藏2.4k"
                    android:textSize="@dimen/x8" />
            </LinearLayout>

            <!--<LinearLayout
                android:id="@+id/ll_share"
                android:layout_width="@dimen/x44"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/x11"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/bottombar_icon_share" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x5"
                    android:text="分享"
                    android:textSize="@dimen/x8" />
            </LinearLayout>-->
        </LinearLayout>
    </LinearLayout>
</LinearLayout>